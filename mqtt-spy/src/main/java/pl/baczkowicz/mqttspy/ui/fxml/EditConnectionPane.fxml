                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <CheckBox fx:id="reconnect" layoutX="486.0" layoutY="116.0" mnemonicParsing="false" />
                        <Label layoutX="278.0" layoutY="185.0" text="Resubscribe on failure" />
