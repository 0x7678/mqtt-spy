<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.ComboBox?>
<?import org.fxmisc.richtext.StyleClassedTextArea?>

<AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.baczkowicz.mqttspy.ui.NewPublicationController">
	<padding><Insets top="6" right="6" bottom="3" left="6" /></padding>
	<children>
            
        <!-- Topic -->
        <Label layoutX="14.0" layoutY="15.0" text="Topic" AnchorPane.topAnchor="5.0" />
        <ComboBox fx:id="publicationTopicText" editable="true" layoutX="53.0" layoutY="10.0" prefHeight="26.0" AnchorPane.leftAnchor="53.0" AnchorPane.rightAnchor="305.0" AnchorPane.topAnchor="0.0" />
        
        <!-- Data -->        
        <Label layoutX="14.0" layoutY="37.0" text="Data" AnchorPane.topAnchor="37.0" />		     
        <StyleClassedTextArea fx:id="publicationData" prefHeight="25.0" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="52.0" AnchorPane.rightAnchor="304.0" AnchorPane.topAnchor="31.0" />
        
        <!-- Retained flag -->
        <Label layoutX="359.0" layoutY="5.0" text="Retained" AnchorPane.rightAnchor="237.0" AnchorPane.topAnchor="5.0" />
        <CheckBox fx:id="retainedBox" layoutX="446.0" layoutY="4.0" mnemonicParsing="false" AnchorPane.rightAnchor="208.0" AnchorPane.topAnchor="4.0" />

		<!-- QoS -->
        <Label layoutX="473.0" layoutY="5.0" text="QoS" AnchorPane.rightAnchor="158.0" AnchorPane.topAnchor="5.0" />        
        <ChoiceBox fx:id="publicationQosChoice" layoutX="506.0" prefHeight="25.0" prefWidth="14.0" value="0" AnchorPane.rightAnchor="108.0" AnchorPane.topAnchor="0.0">
           <items>
              <FXCollections fx:factory="observableArrayList">
                 <String fx:value="0" />
                 <String fx:value="1" />
                 <String fx:value="2" />
              </FXCollections>
           </items>
        </ChoiceBox>
        
        <MenuButton fx:id="formatMenu" mnemonicParsing="false" prefHeight="26.0" prefWidth="190.0" text="Input format: Plain" AnchorPane.rightAnchor="107.0" AnchorPane.topAnchor="32.0">
		  <items>
		      <RadioMenuItem mnemonicParsing="false" text="Plain">
		         <toggleGroup>
		            <ToggleGroup fx:id="formatGroup" />
		         </toggleGroup>
		      </RadioMenuItem>
		      <RadioMenuItem mnemonicParsing="false" text="Hex" toggleGroup="$formatGroup" />
		  </items>
		</MenuButton>        
		
		<Button fx:id="publishButton" disable="true" mnemonicParsing="false" onAction="#publish" prefHeight="58.0" prefWidth="97.0" text="Publish" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
		
   	</children>
</AnchorPane>
